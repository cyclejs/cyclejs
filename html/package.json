{
  "name": "@cycle/html",
  "version": "1.0.0",
  "description": "A driver for HTML strings based on Snabbdom and the DOM driver",
  "license": "MIT",
  "homepage": "https://cycle.js.org",
  "bugs": "https://github.com/cyclejs/cyclejs/issues",
  "repository": "https://github.com/cyclejs/cyclejs/tree/master/html",
  "contributors": [
    {
      "name": "Andre Staltz",
      "email": "andre@staltz.com"
    },
    {
      "name": "Tylor Steinberger",
      "email": "tlsteinberger167@gmail.com"
    },
    {
      "name": "Frederik Krautwald",
      "email": "fkrautwald@gmail.com"
    }
  ],
  "keywords": [
    "reactive",
    "framework",
    "rxjs",
    "rx",
    "unidirectional",
    "mvi",
    "virtual-dom"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "types": "lib/index.d.ts",
  "dependencies": {
    "@cycle/run": "*",
    "@cycle/dom": "16.x",
    "snabbdom": "0.6.7",
    "snabbdom-to-html": "3.0.1"
  },
  "peerDependencies": {
    "xstream": "*"
  },
  "devDependencies": {
    "@cycle/isolate": "2.0.0",
    "@types/mocha": "^2.2.33",
    "@types/node": "^7.0.4",
    "@types/sinon": "^1.16.32",
    "saucie": "3.1.0",
    "simulant": "^0.2.2",
    "snabbdom-jsx": "^0.3.0",
    "xstream": "10.2"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "browserify-shim": {
    "xstream": "global:xstream"
  },
  "scripts": {
    "lint": "../node_modules/.bin/tslint --config ../tslint.json --project tsconfig.json",
    "prelib": "rm -rf lib/ && mkdir -p lib",
    "lib": "../node_modules/.bin/tsc",
    "test-node": "../node_modules/.bin/mocha test/*.ts --require ts-node/register",
    "test": "yarn run lint && yarn run lib && yarn run test-node",
    "test-ci": "yarn run test",
    "browserify": "../node_modules/.bin/browserify lib/index.js --global-transform=browserify-shim --standalone CycleHTML --exclude xstream --outfile dist/cycle-html.js",
    "uglify": "../node_modules/.bin/uglifyjs dist/cycle-html.js --compress --mangle -o dist/cycle-html.min.js",
    "predist": "rm -rf dist/ && mkdir -p dist/",
    "dist": "yarn run lib && yarn run browserify && yarn run uglify",
    "docs": "node ../.scripts/make-api-docs.js ${PWD##*/}",
    "preversion": "yarn test",
    "version": "yarn run dist && yarn run docs && yarn run changelog",
    "postversion": "git add -A && git commit -m \"release(${PWD##*/}): v$(cat package.json | ../node_modules/.bin/jase version)\" && git push origin master && yarn publish",
    "release-patch": "false",
    "release-minor": "npm --no-git-tag-version version minor",
    "release-major": "npm --no-git-tag-version version major",
    "changelog": "node ../.scripts/update-changelogs.js ${PWD##*/}"
  }
}
