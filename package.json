{
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "commitizen": "^2.10.1",
    "cz-customizable": "^5.2.0",
    "husky": "^1.0.0-rc.9",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5",
    "rxjs": "^5.5.11",
    "tslint": "^5.11.0",
    "typescript": "~2.8.4"
  },
  "scripts": {
    "commit": "git-cz",
    "cm": "git-cz",
    "format": "prettier --write './**/*.{ts,tsx,js}'",
    "postinstall": "pnpm recursive install --filter @cycle/* && pnpm run build",
    "build": "pnpm recursive run build --filter @cycle/*",
    "lint": "pnpm recursive run lint --filter @cycle/*",
    "test": "pnpm recursive run test --filter @cycle/*",
    "test-ci": "pnpm recursive run test-ci --filter @cycle/*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "tslint --fix --project tsconfig.lint.json",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": false
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  }
}
