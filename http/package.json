  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/cyclejs"
  },
  "scripts": {
    "build": "rm -rf buil ; tsc --build tsconfig.build.json && pnpm run build:cjs",
    "build:cjs": "BUNDLE_FORMAT=cjs rollup -c ../configs/rollup.config.ts",
    "test": "start-server-and-test start-server 3000 test:both",
    "test:ci": "start-server-and-test start-server 3000 test:both",
    "test:both": "pnpm run test:node && pnpm run test:browser",
    "test:node": "mocha --require ts-node/register test/node.ts",
    "test:browser": "karma start",
    "debug:browser": "DEBUG=1 karma start",
    "start-server": "ts-node --project tsconfig.json test/support/server.ts",
    "format": "prettier --write './{src,test}/**/*'",
    "release": "release-it --config ../configs/release-it.js"
  }
}
